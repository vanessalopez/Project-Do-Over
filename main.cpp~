void mainmenu(){
  int choice;

  cout << "1. Log in" << endl;
  cout << "2. Create a new user" << endl;
  cout << "3. Quit" << endl;

  cin >> choice;
  
  if (choice == 1)
    login();
  else if (choice == 2)
    newuser();
  else if (choice == 3)
    return 0;
  else 
    mainmenu;

}
